{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "g++-7 build and debug active file (input file)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/problem.exe",
      "args": [
        "<",
        "input.txt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "g++-7 build active file",
      "miDebuggerPath": "/usr/bin/gdb"
    },
